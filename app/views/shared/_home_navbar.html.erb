<div class="navbar-wagon" >
  <div class="navbar-wagon-left">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= cl_image_tag("GoLunch") %>
    <% end %>

  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "New Lunch", new_request_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Messages", conversations_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.profile.photo.blank? %>
        <div class="dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <i class="far fa-user-circle"></i>
        </div>
        <% else %>
        <%= cl_image_tag current_user.profile.photo, :transformation=>[{:width=>1200, :height=>1200, :gravity=>"face", :radius=>"max", :crop=>"crop"}], class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to profile_path(current_user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "PROFILE") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_company_path(current_user.profile.company) do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "EDIT COMPANY") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "LOG OUT") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <div id="navbar-home">
      <ul class="nav nav-pills">
        <li><a href="#how-it-works" class="navbar-wagon-item navbar-wagon-link" role="navigation">How it works</a></li>
        <li><a href="#benefits" class="navbar-wagon-item navbar-wagon-link" role="navigation">Benefits</a></li>
        <li><a href="#faq" class="navbar-wagon-item navbar-wagon-link" role="navigation">FAQ</a></li>
        <li><a href="#help" class="navbar-wagon-item navbar-wagon-link" role="navigation">Help</a></li>
      </ul>
    </div>

    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Signup link -->
    <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-button bttn" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
</div>
