<div class="grey-wrapper">
  <div class="container login-container text-center">
    <div id="signup">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="header-line">
            <p class="header-line">
              <span>SETUP YOUR COMPANY</span>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form-inputs" id="setup">
            <%= simple_form_for @company do |f| %>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
              <% if current_user.photo.blank? %>
              <div class="avatar-icon">
                <i class="far fa-user-circle"></i>
              </div>
              <% else %>
              <%= cl_image_tag current_user.photo, class: "avatar" %>
              <% end %>
            </div>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden, placeholder: "Upload your Company Logo" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
            </div>
            <%= f.input :name, placeholder: "Name", as: :string %>
            <%= f.input :email, placeholder: "Email" %>
            <%= f.input :address, placeholder: "Address", as: :string %>
            <%= f.input :locations, placeholder: 'Locations' %>
            <%= f.input :departments, required: false, as: :check_boxes, collection: Department.all, class: "collection_form", prompt: "Departmenttest", label_method: -> (department){department.department} %>
            <%= f.input :employee, collection: ["Employees 1-50", "Employees 51-200", "Employees 201-1,000", "Employees 1,001-5,000", "Employees 5000+"], class: "collection_form", prompt: "Employee range" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Create company", :class => "button btn btn-primary btn-block" %>
          </div>
          <div class="divider">
            <hr>
          </div>
          <%= link_to "", profiles_path, class: 'fas fa-backward' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



