<div class="container target">
  <div class="row">
    <div class="col-sm-10">
     <h1 class=""><%= @profile.first_name %> <%= @profile.last_name  %> </h1>


     <br>
   </div>
   <div class="col-sm-2"><a href="/users" class="pull-right"><img title="profile image" class="img-circle img-responsive" src= <%= @profile.photo %>> </a>

   </div>
 </div>
 <br>
 <div class="row">
  <div class="col-sm-3">
    <!--left col-->
    <ul class="list-group">
      <li class="list-group-item text-muted" contenteditable="false">Company</li>
      <li class="list-group-item text-right"><span class="pull-left"><strong class="">location</strong></span>  <%= @profile.location  %></li>
      <li class="list-group-item text-right"><span class="pull-left"><strong class="">job title</strong></span> <%= @profile.job_title %> </li>
      <li class="list-group-item text-right"><span class="pull-left"><strong class="">department </strong></span><%= @profile.department  %></li>

    </ul>
    <div class="panel panel-default">
     <div class="panel-heading">lunch typ

     </div>
     <div class="panel-body"><i style="color:green" class="fa fa-check-square"></i>
      lorem lunch typ
    </div>
  </div>

  <ul class="list-group">
    <li class="list-group-item text-right"><span class="pull-left"><strong class="">lunches</strong></span> 125</li>
    <li class="list-group-item text-right"><span class="pull-left"><strong class="">review</strong></span> 13</li>
    <li class="list-group-item text-right"><span class="pull-left"><strong class="">stars</strong></span> 4</li>
  </ul>
  <div class="panel panel-default">
    <div class="panel-heading">Social Media</div>
    <div class="panel-body">  <i class="fa fa-facebook fa-2x"></i>  <i class="fa fa-github fa-2x"></i>
      <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i>  <i class="fa fa-google-plus fa-2x"></i>

    </div>
  </div>
</div>
<!--/col-3-->
<div class="col-sm-9" style="" contenteditable="false">

  <div class="row">
    <!--     <div class="col-xs-12 col-sm-9 col-sm-offset-3"> -->
      <div class="form-post">
        <h1>New Lunch Request</h1>
        <%= simple_form_for [@profile, @request], method: :post do |t| %>
        <div class="row">
          <div class="col-xs-6">
            <%= t.input :location, placeholder: "Location", as: :string, input_html: { id: "end_date" } %>
          </div>
          <div class="col-xs-6">
            <%= t.input :kind, placeholder: "Category", collection: ["Delivery", "Restaurant", "Cafeteria"], class: "collection_form", prompt: "Select Lunch Category" %>
          </div>
        </div>
        <!-- Inject categories here -->
        <div class="form-group">
          <label class="control-label check_boxes optional">Categories</label>
          <input type="hidden" name="post" value="">
          <div class="category-choices">
            <% @next_days.each do |day| %>
            <input type="checkbox" class="hidden" value="<%= day %>" name="post" id="post_category_ids_<%= day %>">
            <label class="category-choice" for="post_category_ids_<%= day %>">
              <%= day %>
            </label>
            <% end %>
          </div>
        </div>
        <%=  t.submit "Request Lunch", class: "btn btn-primary btn-block", id: "btt" %>
        <% end %>
      </div>

      <div class="panel panel-default target">
        <div class="panel-heading" contenteditable="false">last lunches</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4">
              <div class="thumbnail">
                <img alt="300x200" src="https://source.unsplash.com/300x200/?dinner">
                <div class="caption">
                  <h3>
                    Rover
                  </h3>
                  <p>
                    was great!
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="thumbnail">
                <img alt="300x200" src="https://source.unsplash.com/300x200/?lunch">
                <div class="caption">
                  <h3>
                    Marmaduke
                  </h3>
                  <p>
                    Had a good conversation about air travel.
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="thumbnail">
                <img alt="300x200" src="https://source.unsplash.com/300x200/?breakfast">
                <div class="caption">
                  <h3>
                    Rocky
                  </h3>
                  <p>
                    Loved the food learned a lot about marketing.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading"><%= @profile.first_name %> <%= @profile.last_name  %></div>
        <div class="panel-body"> <%= @profile.description %></div>
      </div>
    </div>
  </div>
</div>
</div>













