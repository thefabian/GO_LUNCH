<div class="grey-wrapper">
  <div class="container login-container text-center">
    <div id="signup">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="header-line">
            <p class="header-line">
              <span>EDIT YOUR PROFILE</span>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form-inputs" id="setup">
            <%= simple_form_for @profile do |f| %>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
              <% if current_user.photo.blank? %>
              <div class="avatar-icon">
                <i class="far fa-user-circle"></i>
              </div>
              <% else %>
              <%= cl_image_tag current_user.photo, class: "avatar" %>
              <% end %>
            </div>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden, placeholder: "Upload your Company Logo" %>
            </div>
            <div class="col-xs-12 col-sm-6" id="name-1">
              <%= f.input :first_name, placeholder: "First Name", as: :string %>
            </div>
            <div class="col-xs-12 col-sm-6" id="name-2">
              <%= f.input :last_name, placeholder: "Last Name", as: :string %>
            </div>
            <%= f.input :job_title, placeholder: 'Job Title' %>
            <%= f.input :department_id, collection: @profile.company.departments.all, class: "collection_form", prompt: "Department", label_method: -> (department){department.department} %>
            <%= f.input :location, collection: ["Berlin", "Düsseldorf", "Frankfurt", "Hamburg", "Köln", "München", "Nürnberg", "Stuttgart"], class: "collection_form", prompt: "Location" %>
            <%= f.input :description, placeholder: 'Description' %>
          <div class="form-actions">
            <button type="button" class="button btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">
              SAVE CHANGES
            </button>
          </div>
          </div>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h3 class="modal-title" id="exampleModalLabel">EDIT PROFILE</h3>
                  <button type="button" class="close close-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Do you like to save your current changes?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
                  <%= f.button :submit, "SAVE CHANGES", :class => "button btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
          <div class="divider">
            <hr>
          </div>
          <%= link_to "", profile_path, class: 'fas fa-backward' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


