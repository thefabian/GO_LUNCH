<div class="backgroundconforamtion ">
  <div class="container" id="confirmation-page">
    <br>
    <br>
    <div class="text-center headline" id="lbuddy" ><h2>Your next lunch Buddy is</h2></div>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="conformationcontainer fade-in">
        <div class="avatar-flip">
          <%= cl_image_tag( @lunch.other_user(current_user).profile.photo, :transformation=>[{:width=>150, :height=>150, :gravity=>"face", :radius=>"max", :crop=>"crop"},]) %>
        </div>
        <div class="header-line-2" style=" position: relative;">
          <p class="header-line-2" style="text-align: center; background-color: #fff !important; margin-top: -30px;">
            <span id="select-date" style="background-color: #fff !important;">
              <%= @lunch.date.strftime("%a %b %d") %> |  <%= @lunch.location %> |  <%= @lunch.kind %>
          </span>
          </p>
          <div class="col-xs-12 col-sm-6">
            <h3>
              <%= @lunch.other_user(current_user).profile.first_name %>
              <%= @lunch.other_user(current_user).profile.last_name %>
            </h3>
            <h4>
              <%= @lunch.other_user(current_user).profile.job_title %>
            </h4>
            <p>
              <%= @lunch.other_user(current_user).profile.department.department %>
            </p>
            <br>
            <div class="icons-lunch-date">
                <%#= link_to @pofile.facebook do %>
                <i class="fab fa-facebook"></i>
                 <%# end %>
                <%#= link_to @pofile.linkedin do %>
                <i class="fab fa-linkedin"></i>
                 <%# end %>
                <%#= link_to @pofile.xing do %>
                <i class="fab fa-xing-square"></i>
                 <%# end %>
              </div>

          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="card" id="map_small" data-lat="<%= @lunch.other_user(current_user).profile.latitude %>" data-lng="<%= @lunch.other_user(current_user).profile.longitude %>">
            </div>
          </div>
          <hr id="hr-conf">
          <div class="col-xs-12">
            <p id="descr">
              <%= @lunch.other_user(current_user).profile.description %>
            </p>
          </div>
          <hr id="hr-conf">
          <div class="col-xs-12">
            <div title="Add to Calendar" class="addeventatc">
              Add to Calendar
              <span class="start"><%= @lunch.date.strftime("%m/%d/%Y") %> 12:00 PM</span>
              <span class="end"><%= @lunch.date.strftime("%m/%d/%Y") %> 1:00 PM</span>
              <span class="timezone">Europe/Berlin</span>
              <span class="title">Summary of the event</span>
              <span class="description">Description of the event</span>
              <span class="location">Location of the event</span>
            </div>
            <%= link_to "Congrats ! You have a new Lunch Body", profile_path(current_user), class: "btn btn-primary" %>
          </div>
        </div>
        <br>
        <br>
        <br>
      </div>
    </div>
  </div>
